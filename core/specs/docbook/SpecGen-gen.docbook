              </row>
              <row>
                <entry><para>Branch sequence</para></entry>
                <entry/>
              </row>
              <row>
                <entry><para>Exception sequence</para></entry>
                <entry/>
              </row>
            </tbody>
          </tgroup>
        </informaltable>
      </section>
