              <row>
                <entry><para>Actors</para></entry>
                <entry><para>User</para></entry>
              </row>
              <row>
                <entry><para>Precondition</para></entry>
                <entry><para>    </para></entry>
              </row>
              <row>
                <entry><para>Postcondition</para></entry>
                <entry/>
              </row>
              <row>
                <entry><para>Base sequence</para></entry>
